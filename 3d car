<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fast Response AMG</title>
    
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/camera_utils/camera_utils.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/control_utils/control_utils.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/drawing_utils/drawing_utils.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@mediapipe/hands/hands.js" crossorigin="anonymous"></script>

    <style>
        body { margin: 0; overflow: hidden; background-color: #050505; }
        
        #info {
            position: absolute; top: 20px; width: 100%; text-align: center;
            color: white; font-family: 'Segoe UI', sans-serif; pointer-events: none; z-index: 10;
        }
        
        #webcam-container {
            position: absolute; bottom: 20px; right: 20px;
            width: 200px; height: 150px;
            border: 2px solid #00ffcc; border-radius: 10px;
            overflow: hidden; z-index: 20; background: black;
            transform: scaleX(-1); 
        }
        #input_video { width: 100%; height: 100%; object-fit: cover; }

        #loading {
            position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);
            color: #00ffcc; font-family: sans-serif; font-size: 20px;
            background: rgba(0,0,0,0.8); padding: 20px 40px; border-radius: 8px;
            border: 1px solid #00ffcc; 
        }
        .hidden { display: none !important; }
        
        #status {
            position: absolute; bottom: 180px; right: 20px;
            color: #00ffcc; font-family: monospace; font-size: 16px;
            text-align: right; pointer-events: none;
        }
    </style>
</head>
<body>

    
    <div id="status">Waiting for Hand...</div>

    <div id="webcam-container">
        <video id="input_video"></video>
    </div>
    
    <div id="loading">System Initializing...</div>

    <script async src="https://unpkg.com/es-module-shims@1.6.3/dist/es-module-shims.js"></script>
    <script type="importmap">
        {
            "imports": {
                "three": "https://unpkg.com/three@0.154.0/build/three.module.js",
                "three/addons/": "https://unpkg.com/three@0.154.0/examples/jsm/"
            }
        }
    </script>

    <script type="module">
        import * as THREE from 'three';
        import { OrbitControls } from 'three/addons/controls/OrbitControls.js';
        import { GLTFLoader } from 'three/addons/loaders/GLTFLoader.js';
        import { MeshSurfaceSampler } from 'three/addons/math/MeshSurfaceSampler.js';

        const scene = new THREE.Scene();
        scene.background = new THREE.Color(0x050505);

        const camera = new THREE.PerspectiveCamera(60, window.innerWidth / window.innerHeight, 0.1, 3000);
        camera.position.set(0, 20, 70); 
        camera.lookAt(0, 0, 0);

        const renderer = new THREE.WebGLRenderer({ antialias: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.setPixelRatio(window.devicePixelRatio);
        document.body.appendChild(renderer.domElement);

        let interactionTarget = 0; 
        let interactionCurrent = 0; 
        let rotationSpeed = 0;      

        const particleCount = 90000; 
        const geometry = new THREE.BufferGeometry();
        const currentPositions = new Float32Array(particleCount * 3);
        const targetPositions = new Float32Array(particleCount * 3);
        const startPositions = new Float32Array(particleCount * 3);
        const colors = new Float32Array(particleCount * 3);

        for (let i = 0; i < particleCount; i++) {
            const i3 = i * 3;
            const r = 150 + Math.random() * 100;
            const theta = Math.random() * Math.PI * 2;
            const phi = Math.acos(2 * Math.random() - 1);
            
            startPositions[i3] = r * Math.sin(phi) * Math.cos(theta);
            startPositions[i3+1] = r * Math.sin(phi) * Math.sin(theta);
            startPositions[i3+2] = r * Math.cos(phi);

            currentPositions[i3] = startPositions[i3];
            currentPositions[i3+1] = startPositions[i3+1];
            currentPositions[i3+2] = startPositions[i3+2];
            
            colors[i3] = 0; colors[i3+1] = 0.5; colors[i3+2] = 1;
        }

        geometry.setAttribute('position', new THREE.BufferAttribute(currentPositions, 3));
        geometry.setAttribute('color', new THREE.BufferAttribute(colors, 3));

        const material = new THREE.PointsMaterial({
            size: 0.12, vertexColors: true, blending: THREE.AdditiveBlending,
            transparent: true, opacity: 0.9, depthWrite: false
        });

        const particleSystem = new THREE.Points(geometry, material);
        scene.add(particleSystem);

        let modelLoaded = false;
        const loader = new GLTFLoader();

        loader.load('car.glb', (gltf) => {
            gltf.scene.updateMatrixWorld(true);
            const meshes = [];
            let totalArea = 0;

            gltf.scene.traverse((child) => {
                if (child.isMesh && child.geometry.attributes.position) {
                    if(!child.geometry.boundingBox) child.geometry.computeBoundingBox();
                    const box = child.geometry.boundingBox;
                    const sz = new THREE.Vector3();
                    box.getSize(sz);
                    let area = 2 * (sz.x*sz.y + sz.y*sz.z + sz.z*sz.x);
                    if(area < 0.1) area = 0.5; 
                    totalArea += area;
                    meshes.push({ mesh: child, weight: area });
                }
            });

            if (meshes.length === 0) return;

            // --- 1. SIZE CONTROL (CAR SIZE) ---
            // Pehle 25.0 tha, ab 18.0 kiya taaki car choti ho jaye
            const scaleFactor = 18.0; 
            
            let globalIndex = 0;
            const tempPos = new THREE.Vector3();

            meshes.forEach((item) => {
                let count = Math.floor((item.weight / totalArea) * particleCount);
                if(count < 10) count = 10;
                const sampler = new MeshSurfaceSampler(item.mesh).build();

                for (let i = 0; i < count; i++) {
                    if (globalIndex >= particleCount) break;
                    sampler.sample(tempPos);
                    tempPos.applyMatrix4(item.mesh.matrixWorld);

                    const i3 = globalIndex * 3;
                    targetPositions[i3] = tempPos.x * scaleFactor;
                    targetPositions[i3+1] = tempPos.y * scaleFactor;
                    targetPositions[i3+2] = tempPos.z * scaleFactor;

                    colors[i3] = 0.8 + (tempPos.x * 0.1); 
                    colors[i3+1] = 0.1;
                    colors[i3+2] = 0.1;

                    globalIndex++;
                }
            });

            while(globalIndex < particleCount) {
                 const i3 = globalIndex * 3;
                 targetPositions[i3] = 0; targetPositions[i3+1] = 0; targetPositions[i3+2] = 0;
                 globalIndex++;
            }

            modelLoaded = true;
            document.getElementById('loading').innerHTML = "Ready! Show Fist ‚úä";
            setTimeout(() => document.getElementById('loading').classList.add('hidden'), 2000);

        }, undefined, (e) => console.error(e));

        const videoElement = document.getElementById('input_video');
        const statusElement = document.getElementById('status');
        
        function getDistance(p1, p2) {
            return Math.sqrt(Math.pow(p1.x - p2.x, 2) + Math.pow(p1.y - p2.y, 2));
        }

        function onResults(results) {
            if (results.multiHandLandmarks && results.multiHandLandmarks.length > 0) {
                const landmarks = results.multiHandLandmarks[0];
                const wrist = landmarks[0];
                const tips = [8, 12, 16, 20];
                const bases = [5, 9, 13, 17];
                
                let foldedFingers = 0;
                for(let i=0; i<4; i++) {
                    const distTip = getDistance(landmarks[tips[i]], wrist);
                    const distBase = getDistance(landmarks[bases[i]], wrist);
                    if (distTip < distBase) foldedFingers++;
                }

                if (foldedFingers >= 3) {
                    interactionTarget = 1; // Assemble
                    statusElement.innerText = "‚úä FAST ASSEMBLE";
                    statusElement.style.color = "#00ffcc";
                } else {
                    interactionTarget = 0; // Explode
                    statusElement.innerText = "üñê EXPLODE";
                    statusElement.style.color = "#ff3b3b";
                }

                const handX = wrist.x;
                if (handX < 0.4) rotationSpeed = -0.03; // Thoda fast rotation
                else if (handX > 0.6) rotationSpeed = 0.03;
                else rotationSpeed = 0;

            } else {
                statusElement.innerText = "Waiting for Hand...";
                rotationSpeed = 0.002;
            }
        }

        const hands = new Hands({locateFile: (file) => `https://cdn.jsdelivr.net/npm/@mediapipe/hands/${file}`});
        hands.setOptions({ maxNumHands: 1, modelComplexity: 1, minDetectionConfidence: 0.5, minTrackingConfidence: 0.5 });
        hands.onResults(onResults);

        const cameraUtils = new Camera(videoElement, {
            onFrame: async () => await hands.send({image: videoElement}),
            width: 320, height: 240
        });
        cameraUtils.start();

        function animate() {
            requestAnimationFrame(animate);

            if (!modelLoaded) {
                particleSystem.rotation.y += 0.02;
                renderer.render(scene, camera);
                return;
            }

            // --- 2. SPEED CONTROL (Ye values badhayi gayi hain) ---
            // Pehle 0.05 tha -> Ab 0.2 (Bahut fast state change)
            interactionCurrent += (interactionTarget - interactionCurrent) * 0.2;

            const positions = particleSystem.geometry.attributes.position.array;
            
            for (let i = 0; i < particleCount; i++) {
                const i3 = i * 3;
                
                const tx = THREE.MathUtils.lerp(startPositions[i3], targetPositions[i3], interactionCurrent);
                const ty = THREE.MathUtils.lerp(startPositions[i3+1], targetPositions[i3+1], interactionCurrent);
                const tz = THREE.MathUtils.lerp(startPositions[i3+2], targetPositions[i3+2], interactionCurrent);

                // Pehle 0.1 tha -> Ab 0.25 (Particles tezi se bhagenge)
                positions[i3] += (tx - positions[i3]) * 0.25; 
                positions[i3+1] += (ty - positions[i3+1]) * 0.25;
                positions[i3+2] += (tz - positions[i3+2]) * 0.25;
            }

            particleSystem.geometry.attributes.position.needsUpdate = true;
            particleSystem.rotation.y += rotationSpeed;

            renderer.render(scene, camera);
        }

        animate();

        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });
    </script>
</body>
</html>
